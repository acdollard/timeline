---
import "../styles/global.css";
import Navbar from "../components/Navbar";

interface Props {
  title?: string;
}

const { title = "Timeline" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body class="bg-gray-900 min-h-screen">
    <Navbar client:load />
    <main>
      <slot />
    </main>
  </body>
</html>
